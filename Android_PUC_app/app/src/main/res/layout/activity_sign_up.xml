<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/configProfile"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="create an account"
                android:textColor="#000000"
                android:textSize="26sp"
                android:fontFamily="sans-serif-smallcaps"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/addressField2"
                android:layout_width="268dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="(Please enter name)"
                android:inputType="textPersonName"
                android:singleLine="true" />

            <TextView
                android:id="@+id/teamNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Name"
                android:textColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/mobileNumber"
                android:layout_width="268dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="(Please enter mobile number)"
                android:inputType="textPersonName"
                android:singleLine="true" />

            <TextView
                android:id="@+id/mobileNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Mobilenumber"
                android:textColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/usernameField2"
                android:layout_width="264dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="(Please enter emailid)"
                android:singleLine="true" />

            <TextView
                android:id="@+id/emailTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Emailid"
                android:textColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/passwordField"
                android:layout_width="264dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:imeOptions="actionDone"
                android:hint="(Please enter a password)"
                android:inputType="textPassword"
                android:singleLine="true" />

            <TextView
                android:id="@+id/passwordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Password"
                android:textColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/confirmPasswordField"
                android:layout_width="264dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:imeOptions="actionDone"
                android:hint="(Please enter confirmpassword)"
                android:inputType="textPassword"
                android:singleLine="true" />

            <TextView
                android:id="@+id/confirmPasswordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Confirmpassword"
                android:textColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Public"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Public"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <RadioButton
                    android:id="@+id/Police"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Police"
                    android:textSize="18sp" />

            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/createButton"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#634D72"
                android:text="SignUp"
                android:textColor="#FFF"
                android:onClick="SignUp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_weight="0." />

            <Button
                android:id="@+id/backButton"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#9AA4DA"
                android:text="Main Menu"
                android:textColor="#FFF"
                android:onClick="SignUpBack"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>